# 量化投资系统环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# 数据源API配置
# ===========================================

# Tushare Pro Token (可选)
# 获取地址: https://tushare.pro/register
TUSHARE_TOKEN=your_tushare_token_here

# AKShare配置 (通常无需配置)
AKSHARE_TIMEOUT=30

# Yahoo Finance配置
YFINANCE_TIMEOUT=30

# ===========================================
# 数据库配置
# ===========================================

# SQLite数据库路径
DATABASE_PATH=data/quant_system.db

# 数据缓存配置
CACHE_ENABLED=true
CACHE_EXPIRE_HOURS=24

# ===========================================
# 系统配置
# ===========================================

# 运行环境 (development/testing/production)
ENVIRONMENT=development

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/system.log

# ===========================================
# 交易配置
# ===========================================

# 初始资金 (元)
INITIAL_CAPITAL=1000000

# 最大持仓数量
MAX_POSITIONS=5

# 单只股票最大仓位比例
MAX_POSITION_SIZE=0.20

# 止损比例
STOP_LOSS_RATIO=0.05

# ===========================================
# 回测配置
# ===========================================

# 回测数据年限
BACKTEST_YEARS=3

# 交易手续费率
COMMISSION_RATE=0.0003

# 印花税率 (卖出时)
STAMP_TAX_RATE=0.001

# ===========================================
# 性能配置
# ===========================================

# 并发请求数量
MAX_CONCURRENT_REQUESTS=10

# 请求间隔 (秒)
REQUEST_INTERVAL=1

# 数据更新间隔 (秒)
DATA_UPDATE_INTERVAL=300

# ===========================================
# 通知配置 (可选)
# ===========================================

# 邮件通知
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# 微信通知 (可选)
WECHAT_ENABLED=false
WECHAT_WEBHOOK_URL=your_wechat_webhook_url

# ===========================================
# 开发配置
# ===========================================

# 调试模式
DEBUG=false

# 性能分析
PROFILING_ENABLED=false

# 测试数据模式
TEST_MODE=false
